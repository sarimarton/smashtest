  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "body-parser": "^1.20.0",
    "chromedriver": "^105.0.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smashtestio/smashtest.git"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "postbuild": "cp src/*.html dist/src && cp packages/*.smash dist/packages",
    "test:unit": "NODE_OPTIONS=\"${NODE_OPTIONS} --loader ts-node/esm\" nyc --reporter=lcov mocha tests/core/*.js tests/packages/*.js",
    "test:browser:chrome": "ts-node --esm ./src/cli.js tests/packages/*.smash --groups=chrome",
    "test": "npm run test:unit && npm run test:browser:chrome",
    "prepublishOnly": "eslint . && npm run test:unit && npm run build"
  },
  "bin": {
    "smashtest": "./dist/src/cli.js"
  }
}
