  "dependencies": {
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chalk": "^5.0.1",
    "cli-progress": "^3.11.2",
    "clipboardy": "^3.0.0",
    "date-and-time": "^2.4.1",
    "get-port": "^6.1.2",
    "glob": "^8.0.3",
    "jimp": "^0.16.1",
